class Solution {
public:
    vector<int> productExceptSelf(vector<int>& nums) {
        int size = nums.size();
        vector<int> awesomeArray;
        awesomeArray.resize(size, 1);

        int current = 1;
        for (int i = 0; i < size; i++) {
            awesomeArray.at(i) *= current;
            current *= nums.at(i);
        }
        
        current = 1;
        for (int i = size - 1; i >= 0; i--) {
            awesomeArray.at(i) *= current;
            current *= nums.at(i);
        }
        return awesomeArray;
    }
};
